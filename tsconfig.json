{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types/*"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "noEmitOnError": true
  },
  "include": ["./lib", "./index.ts"],
  "buildOptions": {
    "force": true,
  }
}
